        </reference>
    </checkout_cart_index>

    <checkout_onepage_success>
        <reference name="before_body_end">
            <block ifconfig="s48trackingcodes/criteo/enabled" type="core/template" name="criteo_confirmation" as="criteo_confirmation" template="space48/trackingcodes/criteo/confirmation.phtml" />
            <block ifconfig="s48trackingcodes/bing/enabled" type="core/template" name="bing_confirmation" as="bing_confirmation" template="space48/trackingcodes/bing/confirmation.phtml" />
