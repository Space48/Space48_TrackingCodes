            <block ifconfig="s48trackingcodes/gremarketing/enabled" type="core/template" name="remarketing_homepage" as="remarketing_homepage" template="space48/trackingcodes/remarketing/listing.phtml" />
        </reference>
    </catalog_category_view>

    <catalogsearch_result_index>
        <reference name="before_body_end">
            <block ifconfig="s48trackingcodes/criteo/enabled" type="space48_trackingcodes/email" name="criteo_email" as="criteo_email" template="space48/trackingcodes/criteo/email.phtml" />
            <block ifconfig="s48trackingcodes/criteo/enabled" type="space48_trackingcodes/catalog_listing" name="criteo_listingpages" as="criteo_listingpages" template="space48/trackingcodes/criteo/listing.phtml" />
