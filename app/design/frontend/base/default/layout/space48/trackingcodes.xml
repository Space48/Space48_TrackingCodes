        </reference>
    </checkout_cart_index>

    <checkout_onepage_success>
        <reference name="before_body_end">
            <block ifconfig="s48trackingcodes/criteo/enabled" type="space48_trackingcodes/criteo_success" name="criteo_success" as="criteo_success" template="space48/trackingcodes/criteo/success.phtml" />
