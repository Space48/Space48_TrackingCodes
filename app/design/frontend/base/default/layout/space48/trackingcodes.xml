        </reference>
    </cms_index_index>

    <catalog_category_view>
        <reference name="before_body_end">
            <block ifconfig="s48trackingcodes/criteo/enabled" type="space48_trackingcodes/criteo_list" name="criteo_list" as="criteo_list" template="space48/trackingcodes/criteo/list.phtml" />
