    <cms_page_view>
        <reference name="before_body_end">
            <block ifconfig="s48trackingcodes/gremarketing/enabled" type="core/template" name="remarketing_default" as="remarketing_default" template="space48/trackingcodes/remarketing/default.phtml" />
